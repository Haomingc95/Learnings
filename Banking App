Banking App
#include <iostream>

bool Options(int choices, double withdrawal, double deposit, double *ptr);

int main(){
int choices;
double withdrawal;
double deposit;
bool running = true;

double *ptr;
double balance = 0;
ptr = &balance;

std::cout << "****************************" << '\n';
std::cout << "Welcome to Chase Banking App" << '\n';
std::cout << "****************************" << '\n';

while(running){
    std::cout << "Select an option from below" << '\n';
    std::cout << "1. Check Balance" << '\n';
    std::cout << "2. Deposit Money" << '\n';
    std::cout << "3. Withdraw Money" << '\n';
    std::cout << "4. Exit" << '\n';

    if(Options(choices, withdrawal, deposit, ptr)){
        return false;
    }
}

    return 0;
}

bool Options(int choices, double withdrawal, double deposit, double *ptr){
    std::cin >> choices;
    switch (choices){
        case 1:
            std::cout << "Your current balance is: $" << *ptr << '\n';
            return false;
        case 2:
            std::cout << "How much would you like to deposit? ";
            std::cin >> deposit;
            if(deposit > 0){
                *ptr = *ptr + deposit;
                std::cout << "Your new balance is: $" << *ptr << '\n';
                return false;
            }
            else{
                std::cout << "That is not a valid entry.";
                return false;
            }
        case 3: 
            std::cout << "How much would you like to withdraw? ";
            std::cin >> withdrawal;
            if(withdrawal < *ptr){
                *ptr = *ptr - withdrawal;
                std::cout << "Your new balance is: $" << *ptr << '\n';
                return false;
            }
            else{
                std::cout << "The amount you requested to withdraw exceeds your available balance and thus your request cannot be made." << '\n';
                return false;
            }
        case 4:
            std::cout << "Thank you for using the banking app!" << '\n';
            return true;
    }


}
